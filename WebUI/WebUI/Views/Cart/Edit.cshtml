@using WebUI.Models
@model CartEditAmountViewModel

@{
    ViewData["Title"] = "Изменение количества";
}

<form asp-controller="Cart" asp-action="EditAmount" method="post">
    <label>Название товара</label> <br />
    <input type="text" name="Name" value="@Model.Name" disabled>
    <input type="number" name="id" value="@Model.Id" hidden><br/>
    <label>Необходимое количество</label><br/>
    <input type="number" name="amount" min="1", max="100" size="5" step="1" value="@Model.Amount"><br/>
    <input type="submit" value="Сохранить" class="btn btn-primary btn-sm rounded-bottom">
</form>
