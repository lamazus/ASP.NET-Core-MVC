@using WebUI.Models;

@{
    ViewData["Title"] = "Оплата";

}
<h3>Страница оплаты</h3>
<div><p>Номер вашего заказа - @ViewBag.OrderId</p>
    <p>Итоговая сумма к оплате составляет @($"{ViewBag.TotalPrice:C}")</p>
</div>

<form asp-controller="Order" asp-action="Payment" method="post">
    <input type="text" name="orderId" value="@ViewBag.OrderId" hidden />
    <input type="text" name="isPaid" value="true" hidden />
    <input type="submit" value="Оплатить">
</form>
   
