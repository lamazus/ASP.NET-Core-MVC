@using Domain.Entities
@model IEnumerable<Customer>

<table class="table table-striped table-dark w-100">
    <thead>
        <tr>
            <th>Адрес электронной почты</th>
            <th>Имя</th>
            <th>Номер телефона</th>
            <th>Город</th>
            <th>Адрес доставки</th>
            <th>Количество заказов</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model){
            <tr>
                <th><a asp-controller="Customer" asp-action="Details" asp-route-customerId="@customer.CustomerId" class="text-info">@customer.Email</a></th>
                <td>@customer.Name</td>
                <td>@customer.TelephoneNumber</td>
                <td>@customer.City</td>
                <td>@customer.Address</td>
                <td>@customer.Orders.Count</td>
                <td><a asp-controller="Customer" asp-action="Edit" asp-route-customerId=@customer.CustomerId class="btn btn-sm btn-outline-warning">Редактировать</a></td>
            </tr>    
        }    
    </tbody>
</table>

