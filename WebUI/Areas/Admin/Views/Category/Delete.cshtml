@using Domain.Entities
@model Category

<h3 class="text-light">Вы действительно хотите удалить @Model.CategoryId - @Model.Name ?</h3>
    <form asp-action="Delete">
        <input asp-for="CategoryId" name="categoryId" value="@Model.CategoryId" hidden />
        <input name="confirm" type="submit" value="Да" class="btn btn-md btn-success">
        <input name="confirm" type="submit" value="Нет" class="btn btn-md btn-danger"/>
    </form>
